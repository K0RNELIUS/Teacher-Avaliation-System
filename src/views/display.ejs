<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD Departamento</title>
  </head>
  <body>
    <div class="container">
        <form action="/" method="post">
            <input type="text" placeholder="ID" name="id">
            <input type="text" placeholder="Nome" name="nome">
            <input type="submit" placeholder="Create">
        </form>
    </div>

    <table>
        <tr>
            <th>Codigo Departamento</th>
            <th>Nome Departamento</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
            <% if(test.length > 0){ %>
                <% for (let i = 0; i<test.length; i++){ %>
                    <tr>
                        <td> <%- test[i].Codigo_Departamento %></td>
                        <td> <%- test[i].Nome_Departamento %></td>
                        <td><a href="/update?id=<%- test[i].Codigo_Departamento %>" target="_blank">Update</a></td>
                        <td><a href="/delete?id=<%- test[i].Codigo_Departamento %>" target="_blank">Delete</a></td>
                    </tr>
                <% } %>
            <% } else { %>
                <h4>Dados n encotnrados</h4>
            <% } %>
    </table>
  </body>
</html>